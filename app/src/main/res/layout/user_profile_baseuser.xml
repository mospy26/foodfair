<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/userProfile_userBaseLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="45dp"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/userProfile_profileCircleImageView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_menu_profile"
        app:civ_border_color="#FF000000"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userProfile_nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Loading"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/userProfile_genderImageView"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/icons8_female_96"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userProfile_userIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#e9e9e9"
        android:gravity="center">

        <TableLayout
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:stretchColumns="1">
            <TableRow>
                <TextView
                    style="@style/TableLeftCell"
                    android:text="Type" />

                <TextView
                    android:id="@+id/userProfile_typeTextView"
                    style="@style/TableRightCell"
                    android:text="Loading" />
            </TableRow>
            <TableRow android:visibility="gone">
                <TextView
                    style="@style/TableLeftCell"
                    android:text="Age" />

                <TextView
                    android:id="@+id/userProfile_ageTextView"
                    style="@style/TableRightCell"
                    android:text="Loading" />
            </TableRow>

            <TableRow>
                <TextView
                    style="@style/TableLeftCell"
                    android:text="Bio" />

                <TextView
                    android:id="@+id/userProfile_bioTextView"
                    style="@style/TableRightCell"
                    android:text="Loading" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TableLeftCell"
                    android:text="Allergy" />

                <TextView
                    android:id="@+id/userProfile_allergyTextView"
                    style="@style/TableRightCell"
                    android:text="Loading" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TableLeftCell"
                    android:text="Preference" />

                <TextView
                    android:id="@+id/userProfile_preferenceTextView"
                    style="@style/TableRightCell"
                    android:text="Loading" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TableLeftCell"
                    android:text="Location" />

                <TextView
                    android:id="@+id/userProfile_locationTextView"
                    style="@style/TableRightCell"
                    android:text="Loading"
                    android:textSize="11sp" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TableLeftCell"
                    android:text="Join Date" />

                <TextView
                    android:id="@+id/userProfile_joinDateTextView"
                    style="@style/TableRightCell"
                    android:text="Loading" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TableLeftCell"
                    android:text="Last Login" />


                <TextView
                    android:id="@+id/userProfile_lastLoginDateTextView"
                    style="@style/TableRightCell"
                    android:text="Loading" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

</LinearLayout>
