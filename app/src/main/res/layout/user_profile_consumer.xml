<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/userProfile_wholeAsConsumer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="As Consumer"
            android:textSize="20sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#e9e9e9"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Reviews"
                android:textSize="20sp"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/userProfile_reviewsCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Loading"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="in total"
                    android:textSize="14sp"></TextView>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/userProfile_reviewsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e9e9e9"
            android:gravity="center">

            <TableLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        style="@style/TableLeftCell"
                        android:text="Donor" />

                    <TextView
                        android:id="@+id/userProfile_reviewsDonorNameTextView"
                        style="@style/TableRightCell"
                        android:text="Loading" />
                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/TableLeftCell"
                        android:text="Item Name" />

                    <TextView
                        android:id="@+id/userProfile_reviewsFoodNameTextView"
                        style="@style/TableRightCell"
                        android:text="Loading" />
                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/TableLeftCell"
                        android:text="Date" />

                    <TextView
                        android:id="@+id/userProfile_reviewsDateTextView"
                        style="@style/TableRightCell"
                        android:text="Loading" />
                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/TableLeftCell"
                        android:text="Rate" />

                    <RelativeLayout
                        style="@style/TableRightCell"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RatingBar
                            android:id="@+id/userProfile_reviewsRatingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:isIndicator="true"
                            android:max="5"
                            android:rating="3.2" />
                    </RelativeLayout>


                </TableRow>

                <TableRow android:layout_height="wrap_content">

                    <TextView
                        style="@style/TableLeftCell"
                        android:layout_height="match_parent"
                        android:text="Description" />

                    <LinearLayout
                        style="@style/TableRightCell"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/userProfile_reviewsImageReviewShapeableImageView4"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                app:shapeAppearanceOverlay="@style/roundedImageView"
                                app:srcCompat="@drawable/quantum_ic_clear_grey600_24" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/userProfile_reviewsImageReviewShapeableImageView3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                app:shapeAppearanceOverlay="@style/roundedImageView"
                                app:srcCompat="@drawable/quantum_ic_clear_grey600_24" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/userProfile_reviewsImageReviewShapeableImageView2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                app:shapeAppearanceOverlay="@style/roundedImageView"
                                app:srcCompat="@drawable/quantum_ic_clear_grey600_24" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/userProfile_reviewsImageReviewShapeableImageView1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                app:shapeAppearanceOverlay="@style/roundedImageView"
                                app:srcCompat="@drawable/quantum_ic_clear_grey600_24" />


                        </LinearLayout>


                        <TextView
                            android:id="@+id/userProfile_reviewsTextReviewTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:padding="3dip"
                            android:text="Loading"
                            android:textSize="11sp" />
                    </LinearLayout>

                </TableRow>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="View More"
                    android:visibility="gone" />

            </TableLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e9e9e9"
        android:orientation="vertical">

        <RelativeLayout
